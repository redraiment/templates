<configuration>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{hh:mm:ss} %logger#%method %thread %level : %m%n</pattern>
    </encoder>
  </appender>

  <logger name="me.zzp" level="info" />

  <root level="warn">
    <appender-ref ref="console" />
  </root>
</configuration>
